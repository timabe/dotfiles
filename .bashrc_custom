# bunch of git stuff
function parse_git_branch () {
       git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}


RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
ORANGE="\[\033[38;5;9m\]"
GREEN="\[\033[38;5;2m\]"
CYAN="\[\033[0;36m\]"
NO_COLOUR="\[\033[0m\]"
unamestr=`uname`
# pick a different color if you're on a linux versus unix machine
if [[ "$unamestr" == 'Linux' ]]; then
  PS1="$ORANGE\u$NO_COLOUR:\w$GREEN\$(parse_git_branch)$NO_COLOUR\$ "
else
  PS1="$CYAN\u$NO_COLOUR:\w$RED\$(parse_git_branch)$NO_COLOUR\$ "
fi

exists() { type -t "$1" > /dev/null 2>&1; }

export my_id=4121113; 

function silver () { # takes an argument (default is 1) for which machine to go into
	 ssh gw${1-1}.silver.musta.ch
}

function gold () { # takes an argument (default is 1) for which machine to go into
	 ssh gw${1-1}.gold.musta.ch
}

